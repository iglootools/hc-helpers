	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>README*</include>
				<include>CHANGELOG*</include>
				<include>LICENSE-2.0*</include>
				<include>CREDITS*</include>
			</includes>
		</fileSet>

		<!-- Include the website in the assembly -->
		<fileSet>
			<directory>../target/site</directory>
			<outputDirectory>docs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../hchelpers-core/target/site</directory>
			<outputDirectory>docs/hchelpers-core</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../hchelpers-spring/target/site</directory>
			<outputDirectory>docs/hchelpers-spring</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../assembly/target/site</directory>
			<outputDirectory>docs/hchelpers-assembly</outputDirectory>
		</fileSet>


		<!-- Include the source code in the assembly -->
		<fileSet>
			<directory>../</directory>
			<outputDirectory>src/</outputDirectory>
			<includes>
				<include>pom.xml</include>
				<include>src/</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../core</directory>
			<outputDirectory>src/core</outputDirectory>
			<includes>
				<include>pom.xml</include>
				<include>src/</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../spring</directory>
			<outputDirectory>src/spring</outputDirectory>
			<includes>
				<include>pom.xml</include>
				<include>src/</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../assembly</directory>
			<outputDirectory>src/assembly</outputDirectory>
			<includes>
				<include>pom.xml</include>
				<include>src/</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
